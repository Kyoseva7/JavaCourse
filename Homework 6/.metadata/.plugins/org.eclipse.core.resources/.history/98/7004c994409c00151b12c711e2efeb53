
public class Person {
	
	private String name;
	private byte age;
	private String mail;
	
	public void setName(String name) {
		if(name != null && name != "") {
			this.name = name;
		}
	}
	
	public String getNamer(){
		return name;
	}
	public void setAge(byte age) {
		if(age >= 0){
			this.age = age;
		}
	}
	
	public byte getAge() {
		return age;
	}
	
	public void setMail(String mail) {
		if(mail != null && mail != "") 
			this.mail = mail;
		
	}
	
	public String getMail() {
		return mail;
	}
	
	public static void print(String name, byte age, Long egn){
		System.out.println("name: " + name);
		System.out.println("age: " + age);
		System.out.println("egn: " + egn);
	}
		
	}
